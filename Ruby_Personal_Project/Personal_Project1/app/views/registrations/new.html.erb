<h1>Sign up</h1>

<%= form_with model: @user, url: sign_up_path do |form| %>

    <div>
        <%= form.label :email %>
        <%= form.text_field :email, placeholder: "johndoe@email.com" %>
    </div>
    <div>
        <%= form.label :password %>
        <%= form.password_field :password, placeholder: "Enter password" %>
    </div>
    <div>
        <%= form.label :confirm_password %>
        <%= form.password_field :password_confirmation, placeholder: "Re-enter password" %>
    </div>
    <div>
        <%= form.submit "Sign up!" %>
    </div>
<% end %>